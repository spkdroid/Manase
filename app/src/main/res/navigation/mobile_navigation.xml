<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.hedron.meditate.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_musicFragment"
            app:destination="@id/musicFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.hedron.meditate.ui.dashboard.DashboardFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.hedron.meditate.ui.notifications.NotificationsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_navigation_notifications_to_calendarFragment"
            app:destination="@id/calendarFragment" />
    </fragment>
    <fragment
        android:id="@+id/musicFragment"
        android:name="com.hedron.meditate.ui.music.MusicFragment"
        android:label="@string/app_name"
        tools:layout="@layout/music_fragment" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.hedron.meditate.ui.history.HistoryFragment"
        android:label="@string/app_name"
        tools:layout="@layout/history_fragment" />
    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.hedron.meditate.ui.calendar.CalendarFragment"
        android:label="@string/app_name"
        tools:layout="@layout/calendar_fragment" />
</navigation>
